<div class="comment">
  <div class="comment-info">
    <span class="comment-id">
      <%=comment.related_id%>
    </span>
    <span class="user-nickname">
      名無しさん
    </span>
    <span class="comment-date">
      <%=comment.created_at%>
    </span>
  </div>
  <div class="comment-text">
    <%=comment.text%>
  </div>
  <div class="like">
    <%if current_user.already_liked?(comment)%>
      <%=link_to "♡", room_comment_like_path(room_id:comment.room_id,comment_id:comment.id, id: current_user.likes.find_by(comment_id:comment.id).id), method: :delete, class:"like-destroy-btn"%>
    <%else%>
      <%=link_to "♡", room_comment_likes_path(room_id:comment.room_id,comment_id:comment.id), method: :post, class:"like-create-btn"%>
    <%end%>
    <%=comment.likes.all.count%>
  </div>
</div>